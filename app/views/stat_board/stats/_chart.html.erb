<div id="<%= report.slug %>" class="span2">
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="2"><%= report.name %></th>
      </tr>
    </thead>

    <tbody>
      <% StatBoard.models.each do |model| %>
        <tr>
          <td class="span1"><%= model.to_s.pluralize %></td>
          <td class="span1"><%= report.count(model) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
