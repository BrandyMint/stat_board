<div>
  <%= render "chart",
    :title => "Overall",
    :scope => lambda { |klass| klass } %>

  <%= render "chart",
    :title => "This Month",
    :scope => lambda { |klass| klass.where(["created_at > ?", 1.month.ago]) } %>

  <%= render "chart",
    :title => "This Week",
    :scope => lambda { |klass| klass.where(["created_at > ?", 1.week.ago]) } %>
</div>
